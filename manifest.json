{
    "name": "beautyHelper",
    "version": "1.0",
    "description": "Analyze ingredients and cross check products on your favourite cosmetic sites!",
    "icons": {
        "16": "src/img/kiss16.png",
        "32": "src/img/kiss32.png",
        "48": "src/img/kiss48.png",
        "128": "src/img/kiss128.png"
      },
    "browser_action": {
        "default_icon": {                    
          "16": "src/img/kiss16.png",           
          "24": "src/img/kiss24.png",          
          "32": "src/img/kiss32.png"            
          },
        "default_title": "beautyHelper",      
        "default_popup": "src/html/dashboard.html"       
      },
    "background": {
        "scripts": ["src/js/background.js"],
        "persistent": false
      },
    "permissions": ["storage", "activeTab", "contextMenus"],
    "web_accessible_resources": ["src/data/ingredients.min.json"],
    "manifest_version": 2
}